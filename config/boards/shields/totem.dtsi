#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
        zmk,physical_layout = &physical_layout;
    };

    physical_layout: physical_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";

        transform = <&default_transform>;

        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100   73  152       0     0     0>
            , <&key_physical_attrs 100 100  186   60       0     0     0>
            , <&key_physical_attrs 100 100  300    0       0     0     0>
            , <&key_physical_attrs 100 100  400   50       0     0     0>
            , <&key_physical_attrs 100 100  500   66       0     0     0>
            , <&key_physical_attrs 100 100  985   66       0     0     0>
            , <&key_physical_attrs 100 100 1085   50       0     0     0>
            , <&key_physical_attrs 100 100 1185    0       0     0     0>
            , <&key_physical_attrs 100 100 1300   60       0     0     0>
            , <&key_physical_attrs 100 100 1412  152       0     0     0>
            , <&key_physical_attrs 100 100   90  250       0     0     0>
            , <&key_physical_attrs 100 100  192  160       0     0     0>
            , <&key_physical_attrs 100 100  300  100       0     0     0>
            , <&key_physical_attrs 100 100  400  150       0     0     0>
            , <&key_physical_attrs 100 100  500  166       0     0     0>
            , <&key_physical_attrs 100 100  985  166       0     0     0>
            , <&key_physical_attrs 100 100 1085  150       0     0     0>
            , <&key_physical_attrs 100 100 1185  100       0     0     0>
            , <&key_physical_attrs 100 100 1293  160       0     0     0>
            , <&key_physical_attrs 100 100 1395  250       0     0     0>
            , <&key_physical_attrs 100 100    0  323       0     0     0>
            , <&key_physical_attrs 100 100  106  349       0     0     0>
            , <&key_physical_attrs 100 100  199  260       0     0     0>
            , <&key_physical_attrs 100 100  300  200       0     0     0>
            , <&key_physical_attrs 100 100  400  250       0     0     0>
            , <&key_physical_attrs 100 100  500  266       0     0     0>
